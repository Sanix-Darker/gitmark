{
  "name": "gitbookmark-extension",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Universal bookmark manager for Git platform comments",
  "engines": {
    "node": ">=22.17.1"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && vite build --config ./vite.config.content.ts",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build:cross-browser": "node scripts/cross-browser-build.js",
    "build:chrome": "npm run build && cp public/manifest.json dist/",
    "build:firefox": "npm run build && cp public/manifest-v2.json dist/manifest.json",
    "build:safari": "npm run build && cp public/safari-manifest.json dist/manifest.json",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.253",
    "@types/jest": "^29.5.14",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-webextension-mock": "^3.9.1",
    "rollup-plugin-copy": "^3.5.0",
    "typescript": "^5.2.2",
    "vite": "^5.2.0"
  }
}
