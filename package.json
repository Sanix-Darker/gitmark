{
  "name": "gitbookmark-extension",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Universal bookmark manager for Git platform comments",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "jest --config jest.config.cjs",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --config jest.config.cjs",
    "lint": "eslint src/ *.js --ext .js,.ts,.tsx",
    "lint:fix": "eslint src/ *.js --ext .js,.ts,.tsx --fix",
    "build:cross-browser": "node cross-browser-build.js",
    "build:chrome": "npm run build && cp manifest.json dist/",
    "build:firefox": "npm run build && cp manifest-v2.json dist/manifest.json",
    "build:safari": "npm run build && cp safari-manifest.json dist/manifest.json"
  },
  "dependencies": {
    "@preact/signals": "^1.2.2",
    "preact": "^10.19.3",
    "preact-render-to-string": "^6.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/plugin-transform-modules-commonjs": "^7.27.1",
    "@babel/preset-env": "^7.28.0",
    "@eslint/js": "^9.9.1",
    "@preact/preset-vite": "^2.7.0",
    "@types/chrome": "^0.0.253",
    "@types/jest": "^29.5.14",
    "babel-jest": "^30.0.4",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^15.9.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-webextension-mock": "^3.9.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.38.0",
    "vite": "^5.4.2"
  }
}
