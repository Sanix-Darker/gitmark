{
  "manifest_version": 3,
  "name": "GitBookmark - Universal Git Comment Bookmarks",
  "version": "1.0.0",
  "description": "Universal bookmark manager for Git platform comments (GitLab, GitHub, Gitea, Bitbucket, SourceHut, Azure DevOps)",

  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],

  "host_permissions": [
    "https://gitlab.com/*",
    "https://*.gitlab.com/*",
    "https://github.com/*",
    "https://*.github.com/*",
    "https://*.gitea.io/*",
    "https://codeberg.org/*",
    "https://*.codeberg.org/*",
    "https://bitbucket.org/*",
    "https://*.bitbucket.org/*",
    "https://git.sr.ht/*",
    "https://*.sr.ht/*",
    "https://dev.azure.com/*",
    "https://*.visualstudio.com/*",
    "https://*.codegiant.io/*",
    "https://*.gitkraken.com/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": [
        "https://gitlab.com/*",
        "https://*.gitlab.com/*",
        "https://github.com/*",
        "https://*.github.com/*",
        "https://*.gitea.io/*",
        "https://codeberg.org/*",
        "https://*.codeberg.org/*",
        "https://bitbucket.org/*",
        "https://*.bitbucket.org/*",
        "https://git.sr.ht/*",
        "https://*.sr.ht/*",
        "https://dev.azure.com/*",
        "https://*.visualstudio.com/*",
        "https://*.codegiant.io/*",
        "https://*.gitkraken.com/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],

  "action": {
    "default_popup": "popup.html",
    "default_title": "GitBookmark",
    "default_icon": "icons/icon-16.png"
  },

  "options_page": "options.html",

  "web_accessible_resources": [
    {
      "resources": ["config/platform-selectors.json"],
      "matches": ["<all_urls>"]
    }
  ],

  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
